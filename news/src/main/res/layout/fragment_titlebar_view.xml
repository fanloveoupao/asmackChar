<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/index_popup_layout"
    android:background="@color/title_bg">

    <LinearLayout
        android:id="@+id/left_back_layout"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_back_image_botton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/arrow_white"
            android:visibility="gone" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/left_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

        <com.tgnet.utils.android.ImageCircleView
            android:id="@+id/icv_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"

            android:duplicateParentState="true"

            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/red_point"
            android:duplicateParentState="true"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/background_white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/center_icon"
            android:background="@drawable/arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/center_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/background_white"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/right_next_image_layout"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"

            android:layout_marginRight="10dp"
            android:background="@null"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_message_layout"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
             />

        <TextView
            android:id="@+id/message_red_point"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/red_point"
            android:gravity="center"
            android:textColor="@color/font_white"
            android:textSize="20sp"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/right_next_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/background_white"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_two_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right_image_button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_image_button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/index_arrow_up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:visibility="gone"
        android:layout_marginRight="2dp"/>

</RelativeLayout>